{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

{%
    set classes = [
      'region',
      'region-' ~ region|clean_class,
    ]
  %}

{% if content %}
    
<footer class="site-footer">
  <div class="layout-container">
    <div{{ attributes.addClass(classes) }}>
      <div class="footer-site-brand">
        <a class="site-logo" href="{{ url('<front>') }}" rel="home" title="Visuale Home">
            {% include '@visuale/../src/images/logo.svg' %}
        </a>
          
      </div>
      <div class="location-and-timezone">
          <p><strong>Based in Chicago, USA</strong></p>
          <p>UTC-5 hours / CT</p>          
      </div>
      {{ content }}
      <div class="social-media-links">
              <a href="https://github.com/visuale" target="_new" title="Visuale on Github" class="visuale-github">
                  {% include '@visuale/../src/images/visuale-github.svg' %}
              </a>
              <a href="https://twitter.com/visualechicago" target="_new" title="Visuale on Twitter" class="visuale-twitter">
                  {% include '@visuale/../src/images/visuale-twitter.svg' %}
              </a>
      </div>
    </div>
  </div>
  <div class="layout-container site-disclaimer">
    <p>
        All content presented on this site is protected and may not be used without the owner's consent.
    </p>
  </div> 
</footer>   
 {% endif %}
  